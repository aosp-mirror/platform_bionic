        "upstream-netbsd/lib/libc/include",
        "upstream-netbsd/android/include",
    ],

    name: "libc_dns",
    clang: use_clang,

    stl: "none",
    system_shared_libs: [],
    asan: false,
    native_coverage: bionic_coverage,

}

