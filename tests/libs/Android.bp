cc_defaults {
    name: "bionic_testlib_defaults",
    host_supported: true,
    ldflags: [
        "-Wl,--rpath,${ORIGIN}",
        "-Wl,--enable-new-dtags",
    ],
    relative_install_path: "bionic-loader-test-libs",
    gtest: false,
    sanitize: {
        address: false,
        coverage: false,
    },
    stl: "libc++_static",
    target: {
        darwin: {
            enabled: false,
        },
    },
}

